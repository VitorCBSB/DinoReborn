<?xml version="1.0" ?>
<bullet>
	<sprite>img/bullet.png</sprite>
	<actions>
		<changeSpeed type="absolute">
			<speed>0</speed>
			<time>1000</time>
		</changeSpeed>
		<wait>1000</wait>
		<repeat>
			<times>30</times>
			<actions>
				<fire>
					<direction type="absolute">$repeat * 13</direction>
					<speed>200</speed>
					<bulletRef>scripts/bullets/tiro_simples.xml</bulletRef>
				</fire>
			</actions>
		</repeat>
		<vanish />
	</actions>
</bullet>

